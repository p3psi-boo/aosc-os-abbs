abinfo "Installing Dependencies ..."
npm install -g yarn
yarn install

abinfo "Setting Local Env ..."
cp -av "$SRCDIR"/.env.example "$SRCDIR"/.env

abinfo "Fixing Tray Icons Theme ..."
sed -i 's/menu-${iconTheme}@88.png/64x64.png/g' "$SRCDIR"/src/electron/tray.js

abinfo "Building Yesplaymusic  ..."
yarn electron:build --dir

abinfo "Installing Yesplaymusic ..."
if ab_match_arch arm64 ; then
	ELECTRONDIR="$SRCDIR"/dist_electron/linux-arm64-unpacked
else
	ELECTRONDIR="$SRCDIR"/dist_electron/linux-unpacked
fi
mkdir -pv "$PKGDIR"/usr/lib/yesplaymusic
cp -av "$ELECTRONDIR"/* "$PKGDIR"/usr/lib/yesplaymusic
chmod -v 755 "$PKGDIR"/usr/lib/yesplaymusic/yesplaymusic
mkdir -pv "$PKGDIR"/usr/share/doc/yesplaymusic
cp -av "$ELECTRONDIR"/*LICENSE* "$PKGDIR"/usr/share/doc/yesplaymusic

abinfo "Marking any shared libraries as executable ..."
find "$PKGDIR" -name '*.so.*' -exec chmod -v 0755 {} \;
